{
    "compilerOptions": {
      "target": "es2020",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"],
    "ts-node": {"esm": true}
}
